<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import net.sharksystem.sharknet.javafx.controller.inbox.InboxList?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<BorderPane fx:id="inboxView" styleClass="theme-presets" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="16" left="10" right="10" bottom="0"/>
    </padding>
    <top>
        <GridPane>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"></RowConstraints>
                <RowConstraints vgrow="SOMETIMES"></RowConstraints>
                <RowConstraints vgrow="NEVER"></RowConstraints>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"></ColumnConstraints>
                <ColumnConstraints hgrow="ALWAYS" halignment="RIGHT"></ColumnConstraints>
            </columnConstraints>
            <Label GridPane.rowIndex="0">Broadcast erstellen</Label>
            <TextArea promptText="Was gibt es neues bei dir?" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"  />
            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.fillHeight="true" alignment="CENTER_RIGHT">
                <Button text="Filter" HBox.hgrow="ALWAYS"/>
                <Button text="Senden" HBox.hgrow="ALWAYS"/>
            </HBox>
        </GridPane>

    </top>
    <center>
        <InboxList fx:id = "inboxListView"></InboxList>
    </center>
</BorderPane>
