<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<?import com.jfoenix.controls.JFXButton?>
<GridPane alignment="CENTER" hgap="10.0" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.sharksystem.sharknet.javafx.controller.profile.ProfileController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="NEVER" />
    <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox>
         <children>
            <Label text="%profile.nickname" />
            <TextField fx:id="nicknameTextfield" promptText="%profile.nickname" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="1">
         <children>
            <Label text="%profile.realname" />
            <TextField fx:id="realnameTextfield" promptText="%profile.realname" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="2">
         <children>
            <Label text="%profile.email" />
            <TextField fx:id="emailTextfield" promptText="%profile.email" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="3">
         <children>
            <Label text="%profile.info" />
            <TextArea fx:id="userInfoTextfield" promptText="%profile.info" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
         <children>
            <JFXButton fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Abbrechen" />
            <JFXButton fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Speichern" />
         </children>
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
   </padding>
</GridPane>
