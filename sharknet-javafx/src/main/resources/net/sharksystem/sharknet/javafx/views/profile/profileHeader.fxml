<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import net.sharksystem.sharknet.javafx.controls.FontIcon?>
<?import net.sharksystem.sharknet.javafx.controls.RoundImageView?>
<GridPane stylesheets="@profile.css" styleClass="theme-presets,header-pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.92">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints valignment="CENTER" vgrow="NEVER" />
    <RowConstraints valignment="TOP" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <StackPane fx:id="profileImageLayer" GridPane.columnSpan="2">
         <children>
             <RoundImageView fx:id="profileImageView" fitHeight="128.0" fitWidth="128.0">
                 <image>
                     <Image url="@../../images/profile-placeholder.jpg" />
                 </image>
             </RoundImageView>
             <FontIcon icon="CAMERA_RETRO"></FontIcon>
         </children>
      </StackPane>
       <Label fx:id="nicknameLabel" styleClass="display-1" text="Max Mustermann" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
       <Label fx:id="nameLabel" styleClass="title"  textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
   </children>
   <padding>
      <Insets left="16.0" right="16.0" top="16.0" />
   </padding>
</GridPane>
